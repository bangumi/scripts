{
  "name": "bangumi-scripts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "create": "node scripts/create-script.mjs",
    "readme": "node scripts/gen-readme.mjs",
    "version": "node scripts/check-userscript-versions.mjs",
    "diff": "sh -c 'diff -u $1.user.js $1.gadget.js > patches/$1.gadget.patch' _",
    "patch": "sh -c 'patch -p1 -i patches/$1.gadget.patch -o $1.gadget.js $1.user.js' _",
    "diff:all": "sh -c 'mkdir -p patches && for gadgetFile in *.gadget.js; do baseName=$(basename \"$gadgetFile\" .gadget.js); userFile=\"$baseName.user.js\"; [ -f \"$userFile\" ] && pnpm run diff \"$baseName\"; done' _",
    "patch:all": "sh -c 'for patchFile in patches/*.gadget.patch; do baseName=$(basename \"$patchFile\" .gadget.patch); pnpm run patch \"$baseName\"; done' _",
    "lint": "eslint . && stylelint .",
    "lint:fix": "eslint . --fix",
    "publish:gadget": "npm run patch:all && node scripts/publish-gadget.mjs",
    "publish:gf": "npm run version && git push",
    "publish:all": "npm run publish:gadget && npm run publish:gf"
  },
  "pre-commit": [
    "readme",
    "lint"
  ],
  "keywords": [],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.24.0",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-plugin-baseline-js": "^0.4.2",
    "eslint-plugin-jsdoc": "^61.4.0",
    "eslint-plugin-userscripts": "^0.5.6",
    "globals": "^16.4.0",
    "postcss-styled-syntax": "^0.7.1",
    "pre-commit": "^1.2.2",
    "stylelint": "^16.26.1",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-plugin-use-baseline": "^1.1.2",
    "userscript-meta": "^1.0.1"
  }
}
  "license": "MIT",
  "main": "src/index.ts",
  "out": "bangumi_comment_list_optimization.user.js",
  "userscript": {
    "name": "Bangumi 高楼优化",
    "namespace": "b38.dev",
    "icon": "https://bgm.tv/img/favicon.ico",
    "homepage": "https://github.com/bangumi/scripts/blob/master/vickscarlet/scripts/comment_list_optimization",
    "match": [
      "*://bgm.tv/*",
      "*://chii.in/*",
      "*://bangumi.tv/*"
